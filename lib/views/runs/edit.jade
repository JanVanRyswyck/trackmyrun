.container
	.span10
		.page-header
			h1.inline-title Edit Run

		form.form-horizontal(method='post', action='/runs/#{run.id}')
			input(name='_method', value='PUT', type='hidden')
			!=partial('runfields', { run: run, pairsOfShoes: pairsOfShoes, validationErrors: validationErrors })

			.form-actions
				button.btn.btn-primary(type='submit') Save
				| 
				a.btn(href='/runs') Cancel