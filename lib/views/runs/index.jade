.span3
	.well.sidebar-nav
		h4 Year
		ul
			each entry in numberOfRunsPerYear
				li
					a(href='/runs/#{entry.year}') #{entry.year} (#{entry.numberOfRuns})

.span11
	.page-header
		h1.inline-title My Runs in #{year}
		span.top-command-buttons
			a.btn.btn-primary(href='/runs/new') Add New Run
	
	table.table.table-bordered.table-striped
		thead
			tr
				th Date
				th Distance
				th Duration
				th Speed
				th Avg. Heart Rate
				th Shoes
				th
				th
		tbody
			each run in runs
				tr
					td #{run.date}
					td #{run.distance}
					td #{run.duration.hours}h #{run.duration.minutes}min #{run.duration.seconds}sec
					td #{run.speed}
					td #{run.averageHeartRate}
					td #{shoeNameFor(run.shoes, shoes)} 
					td 
						a(href='/runs/#{run.id}') Details
					td 
						a(href='/runs/#{run.id}/delete') Delete