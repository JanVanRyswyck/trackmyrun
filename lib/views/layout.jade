!!!
html
	head
		meta(charset='utf-8')
		title Track My Run
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/trackmyrun.css')
	body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container-fluid
					a.brand(href="/") Track My Run
					
					if locals.currentUser
						ul.nav
							li.active	
								a(href="/") Home
							li
								a(href="/runs") My Runs
							li
								a(href="/shoes") My Shoes
							li
								a(href="/options") Options

						ul.nav.pull-right
							li 
								p.navbar-text #{ currentUser.displayName }

							li.divider-vertical

							li
								a(href="/logout") Sign Out
					else
						ul.nav.pull-right
							li
								a(href="/auth/twitter")
									img(style='border: 0px', src='https://si0.twimg.com/images/dev/buttons/sign-in-with-twitter-l.png')
		if locals.currentUser
			.container-fluid
				.rowfluid
					!=body
					
			include includes/footer
		else
			.container
				!=body
				
			include includes/footer
		